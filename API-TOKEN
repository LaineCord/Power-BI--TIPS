#CRIAR A FUNÇÃO ABAIXO PARA ACESSO A API COM TOKEN

(page as text) =>


let
urlBase = "API URL",
endPoint = "endpoint?&page="&page,
cabecalho =
    [
        Authorization = "Bearer CODIGO TOKEN "
    ],

Fonte = 
     Web.Contents(
                urlBase,
    [
        
        RelativePath = endPoint,
        Headers = cabecalho
        
           
    ]
    ),

abrirJson = Json.Document(Fonte)
in
    abrirJson
